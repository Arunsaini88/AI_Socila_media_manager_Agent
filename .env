# .env.example
# Copy this file to .env and update with your actual values

# =================================
# Flask Configuration
# =================================
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True
FLASK_ENV=development

# =================================
# Facebook API Configuration
# =================================
# Get these from https://developers.facebook.com/
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Set to False for real Facebook integration, True for testing
FACEBOOK_MOCK_MODE=True

# =================================
# Data Storage
# =================================
DATA_DIRECTORY=data

# =================================
# Security & Rate Limiting
# =================================
RATELIMIT_ENABLED=False
RATELIMIT_DEFAULT=100 per hour

# CORS settings (comma-separated domains, or * for all)
CORS_ORIGINS=*

# =================================
# Content Generation Settings
# =================================
DEFAULT_POST_FREQUENCY=3
MAX_POST_FREQUENCY=7

# =================================
# Website Analysis Settings
# =================================
WEBSITE_TIMEOUT=10
MAX_WEBSITE_SIZE=5242880

# =================================
# News Analysis Settings
# =================================
NEWS_CACHE_HOURS=6
MAX_NEWS_ITEMS=10

# =================================
# Logging Configuration
# =================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# =================================
# Data Management
# =================================
DATA_RETENTION_DAYS=30

# =================================
# Performance Settings
# =================================
MAX_CONTENT_LENGTH=16777216

# =================================
# Development/Testing Settings
# =================================
# Set to True to enable detailed error messages
DEVELOPMENT_MODE=True

# Test data settings
USE_MOCK_DATA=True

# Add to your .env file:
USE_REAL_AI=False
OPENAI_API_KEY=sk-your-actual-key-here
# =================================
# Production Settings (uncomment for production)
# =================================
# SECRET_KEY=your-production-secret-key-very-long-and-secure
# DEBUG=False
# FLASK_ENV=production
# FACEBOOK_MOCK_MODE=False
# RATELIMIT_ENABLED=True
# LOG_LEVEL=WARNING
# DEVELOPMENT_MODE=False
# USE_MOCK_DATA=False