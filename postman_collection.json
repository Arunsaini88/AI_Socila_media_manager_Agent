          "const today = new Date();",
          "const nextMonday = new Date(today);",
          "nextMonday.setDate(today.getDate() + (1 + 7 - today.getDay()) % 7);",
          "pm.collectionVariables.set('next_monday', nextMonday.toISOString().split('T')[0]);"
        ]
      }
    },
